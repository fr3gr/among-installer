<Window x:Class="AmongUsModInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Among Us Mod Installer v1.0.0" Height="500" Width="600"
        ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Among Us Mod Installer" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Status -->
        <GroupBox Grid.Row="1" Header="Status" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock x:Name="StatusText" Text="Szukanie gry..." 
                          FontSize="12" Margin="5"/>
                <TextBlock x:Name="VersionText" Text="" 
                          FontSize="11" FontWeight="Bold" 
                          Foreground="Blue" Margin="5,0,5,5"/>
                <TextBlock x:Name="PathText" Text="" 
                          FontSize="10" Foreground="Gray" 
                          Margin="5,0,5,5" TextWrapping="Wrap"/>
            </StackPanel>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Margin="0,10">
            <Button x:Name="AutoInstallBtn" Content="🎯 Auto-wybór moda (zalecane)" 
                    Height="50" FontSize="14" FontWeight="Bold"
                    Background="#4CAF50" Foreground="White"
                    Click="AutoInstallBtn_Click" IsEnabled="False"
                    Margin="0,5"/>
            <Button x:Name="ManualInstallBtn" Content="Instaluj mod (folder lub ZIP)" 
                    Height="40" FontSize="12"
                    Click="ManualInstallBtn_Click" IsEnabled="False"
                    Margin="0,5"/>
            <Button Content="Wybierz folder gry ręcznie" 
                    Height="40" FontSize="12"
                    Click="SelectFolderBtn_Click"
                    Margin="0,5"/>
        </StackPanel>

        <!-- Progress -->
        <GroupBox Grid.Row="4" Header="Postęp" Margin="0,10,0,0">
            <StackPanel>
                <TextBlock x:Name="ProgressText" Text="" 
                          Margin="5" FontSize="11"/>
                <ProgressBar x:Name="ProgressBar" Height="20" 
                            Margin="5,0,5,5"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
